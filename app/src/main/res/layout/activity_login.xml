<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:layout_marginTop="25px">


    <TextView
        android:id="@+id/unameTxtView"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="300px"
        android:layout_height="100px"
        android:gravity="center"
        android:paddingTop="16px"
        android:text="Username" />

    <EditText
        android:id="@+id/email"
        android:layout_width="700px"
        android:layout_height="100px"
        android:layout_toRightOf="@+id/unameTxtView" />


    <TextView

        android:id="@+id/pwdTxtView"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/unameTxtView"
        android:gravity="center"
        android:text="Password"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/password"
        android:layout_width="700px"
        android:layout_height="100px"
        android:layout_below="@+id/email"
        android:layout_toRightOf="@+id/pwdTxtView"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/loginbtn"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:text="Login" />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/loginbtn"
        android:text="Sign Up" />

</RelativeLayout>